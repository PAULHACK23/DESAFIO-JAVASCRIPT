//UseState

////// lo que va en las parentesis $ va a ser el estado acutal osea el primer estado/nombre/count
const  [count, setCount] = useState (0)
console.log (useState)
//ESTADO ACTUAL  ESTADO POSTERIOR 
  
const incrementCount = () => {
  setCount (count + 1)
  
}
const restarCount = () => {
  setCount (count - 1)
  
}








<>
<p>Contador:{count}</p>
<button onClick={incrementCount}>incrementar</button>
<button onClick={restarCount} disabled={count==0? 'disabled':''}>Restar</button>
</>
)















