function sumarLikesDeUsuario(usuario9) {
  // Verificamos si el objeto "usuario" tiene una propiedad "posts" y si es un array 
  if (!Array.isArray(usuario9.posts)) {       
  return 0; // Si no existe la propiedad "posts" o no es un array, devolvemos 0
    }

    } 
  let sumaLikes = 0; // Variable para almacenar la suma total de like
  // Recorremos el array "posts" usando un bucle for o forEach 
  for (let i = 0; i < usuario9.posts.length; i++) {     
  // Verificamos si el objeto "post" tiene una propiedad "likes" que es un nÃºmero     
  if (typeof usuario9.posts[i].likes === 'number') {
        sumaLikes += usuario9.
        sumaLikes += usuario9 
  posts[i].likes; // Sumamos los likes del objeto "post" actual al total
      }
      return sumaLikes; // Devolvemos la suma total de likes
    }
    const usuario9 = {
      nombre: "Juan",
      
      
    
   [
      
    {
       
    likes: 10 ,
       
    likes: 5 ,
       
    
       
    likes: 20 }
      ]
    }
     
    console.log(sumarLikesDeUsuario(usuario9)); // Output: 35 (10 + 5 + 20)